      svg class='icon-xs text-white' aria-hidden='true'
        use xlink:href='#icon-chevron-right'
  a href='#' class='link--outline border-black'
    = 'Inspirations'
    span class='link--icon'
      svg class='icon-xs text-white' aria-hidden='true'
        use xlink:href='#icon-chevron-right'
  a href='#' class='link--outline border-black'
