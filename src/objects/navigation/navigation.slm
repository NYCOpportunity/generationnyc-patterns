        span class='' Close

  div class='o-navigation-items'
    div class='select__container text-black px-2'
      select class='select text-black border-black' name='language' id='language'
        option value='en' = 'English'
        option value='ar' = 'Arabic'
        option value='bn' = 'Bengali'
        option value='fr' = 'French'
        option value='ht' = 'Haitian Creole'
