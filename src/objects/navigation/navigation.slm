/ Navigation

nav class='o-navigation bg-black text-white'

  div class='flex items-end'
    a href='/' class='o-navigation-logo text-white'
      span class='sr-only' Generation NYC

      svg class='logo' aria-hidden='true'
        use xlink:href='#logo-gen'
    
    span class='o-navigation__text text-white' 
      = 'NYC’s Official Guide for'
      br =  'Young New Yorkers'

  div class='o-navigation-items hidden tablet:grid grid-rows-2 text-right items-end'
    div class='select__container text-right text-white pb-2 pr-4'
      label class='select__label' for='language' = 'Translate'
      select class='select text-white border-white' name='language' id='language'
        option value='en' = 'English'
        option value='ar' = 'Arabic'
        option value='bn' = 'Bengali'
        option value='fr' = 'French'
        option value='ht' = 'Haitian Creole'
        option value='ko' = 'Korean'
        option value='pl' = 'Polish'
        option value='ru' = 'Russian'
        option value='es' = 'Spanish'
        option value='zh-hant' = 'Traditional Chinese'
        option value='ur' = 'Urdu'
      svg class='select__icon icon-xs' aria-hidden='true'
        use xlink:href='#icon-chevron-down'

    div class='o-navigation-links tablet:pt-6'
      a href='#' class='o-navigation-link' = 'Topics'
      a href='#' class='o-navigation-link' = 'Inspirations'
      a href='#' class='o-navigation-link' = 'Opportunities'
      a href='#' class='o-navigation-link' = 'Trips'
      a href='#' class='o-navigation-link inline-flex'
        = 'Search'
        svg class='icon-sm ml-1' aria-hidden='true'
          use xlink:href='#icon-search'
  
  button class='btn--secondary tablet:hidden' data-js='navigation' aria-controls='toggle-test-menu'
    span class='' Menu

